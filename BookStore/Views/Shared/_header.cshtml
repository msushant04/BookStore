@using Microsoft.Extensions.Configuration
@inject IConfiguration _configuration
@inject Microsoft.Extensions.Options.IOptionsSnapshot<NewBookAlertConfig> _newbookalertconfig;
@inject BookStore.Repository.IMessageRepository _MessageRepository;

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" href="/">
                    <img style="width:25px;height:25px;" src="~/images/logo.png" />
                    @_configuration["AppName"]
                </a>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 flex-grow-1">
                    <li class="nav-item" id="IndexLink">
                        <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item" id="AboutUsLink">
                        <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About</a>
                    </li>
                    <li class="nav-item" id="ContactUs">
                        <a class="nav-link" asp-controller="Home" asp-action="ContactUs">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="GetAllBooks">All Book</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="AddBook">Add New Book</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <partial name="_LoginInfo" />
                </ul>
                @*<form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>*@
            </div>
        </div>
    </nav>
    @if (_newbookalertconfig.Value.DisplayNewBookAlert)
    {
        <div class="alert alert-info" role="alert">
            @(_MessageRepository.GetName())
        </div>
    }
</header>

